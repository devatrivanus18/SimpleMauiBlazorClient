@page "/game"
@namespace SampleAPIMauiBlazorClient.Components.Pages

<style>
    .padding5
    {
        padding:5px !important;
    }

    .overflow-content
    {
        white-space: nowrap;
        overflow: auto;
        text-overflow: ellipsis;
    }
</style>

<MudGrid>

@if (Games.Any())
{

    foreach (var item in Games)
        {
            <MudItem xs="12" sm="6">
                    <MudCard>
                        <MudCardContent>
                            <MudText>@item.Publishers.FirstOrDefault()</MudText>
                            <MudText Typo="Typo.body2">@item.Name</MudText>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Variant="MudBlazor.Variant.Text" Color="Color.Primary">AUS : @item.ReleaseDates.Australia</MudButton>
                            <MudButton Variant="MudBlazor.Variant.Text" Color="Color.Primary">JPN : @item.ReleaseDates.Japan</MudButton>
                            <MudButton Variant="MudBlazor.Variant.Text" Color="Color.Primary">EUR : @item.ReleaseDates.Europe</MudButton>
                            <MudButton Variant="MudBlazor.Variant.Text" Color="Color.Primary">US : @item.ReleaseDates.Europe</MudButton>
                        </MudCardActions>
                    </MudCard>
            </MudItem>
        }
}
else
{

        <MudItem xs="12">
            <MudPaper Class="d-flex align-center justify-center">
                <RadzenProgressBarCircular ShowValue="true" Mode="ProgressBarMode.Indeterminate" Size="ProgressBarCircularSize.Medium">
                    <Template>Wait</Template>
                </RadzenProgressBarCircular>
            </MudPaper>
        </MudItem>
}
</MudGrid>



